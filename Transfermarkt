    public static void main(String[] args) {
        new Transfermarkt();

    }

    Transfermarkt() {
        Scanner scanner = new Scanner(System.in);

        System.out.println("If you want to check the winner of each season, please enter 1. If you want to make a prediction on one season, please enter 2");
        int a;
        a = scanner.nextInt();
        if (a == 1) {
            Search();
        } else if (a == 2) {
            boolean a1=true;
            while(a1){

                System.out.println("If you want to simulate the result of a competition, please enter 1. If you want to make a seasonal prediction, please enter 2");
                int c;
                c = scanner.nextInt();
                if (c == 1) {
                    Singlegame();
                } else if (c == 2) {
                    System.out.println("Type the correct number to choose the league '1.premier League 2.laliga 3.bundesliga' and we are going to simulate that league");
                    int mm1;
                    mm1 = scanner.nextInt();
                    if (mm1 == 1) {
                        premier_League_competitionseason();
                    } else if (mm1 == 2) {
                        spanlish_competitionseason();
                    } else if (mm1 == 3) {
                        bundesliga_competitionseason();
                    } else {
                        System.out.println("Beyond the scope of service!");
                    }


                }System.out.println("If you want to continue the prediction, then input 1, otherwise input 2");
                int as;
                as=scanner.nextInt();
                if(as==1){
                    a1=true;
                } else if (as==2) {
                    a1=false;

                }
                }
        }
    }

